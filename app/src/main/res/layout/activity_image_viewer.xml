<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageViewer">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarOnImageViewer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#67A9F8"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:menu="@menu/image_preview_menu"
        app:title="Image Preview" />

    <com.github.chrisbanes.photoview.PhotoView
        android:layout_below="@+id/toolbarOnImageViewer"
        android:id="@+id/imageViewOnImageViewer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_image"/>
</RelativeLayout>